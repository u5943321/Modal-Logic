open HolKernel Parse boolLib bossLib;
open chap1Theory;
open pred_setTheory;
open relationTheory;
open arithmeticTheory;
open set_relationTheory;

open chap2_1Theory;
open chap2_2Theory;
open IBCDNFTheory;
open equiv_on_partitionTheory;


(* open chap2_3Theory; *)

val _ = ParseExtras.tight_equality()

val _ = new_theory "chap2_3";

(* finite model property via selection *)


val DEG_def =
  Define
    `DEG (VAR p) = 0 /\
     DEG (FALSE) = 0 /\
     DEG (NOT form) = DEG form /\
     DEG (DISJ form1 form2) = MAX (DEG form1) (DEG form2) /\
     DEG (DIAM form) = (DEG form) + 1`;


val DEG_0_propform = store_thm(
"DEG_0_propform",
``!f. DEG f = 0 <=> propform f``,
Induct_on `f` >> fs[DEG_def,propform_def]);


(* base case *)

val subforms_def = Define`
  subforms (VAR a) = {VAR a} /\
  subforms (FALSE) = {FALSE} /\
  subforms (NOT f) = NOT f INSERT subforms f /\
  subforms (DISJ f1 f2) = DISJ f1 f2 INSERT subforms f1 UNION subforms f2 /\
  subforms (DIAM f) = DIAM f INSERT subforms f
  `;

val subforms_phi_phi = store_thm(
"subforms_phi_phi",
``!phi. phi IN subforms phi``,
Induct_on `phi` >> fs[subforms_def]);

val subforms_DISJ = store_thm(
"subforms_DISJ",
``f1 IN (subforms (DISJ f1 f2)) /\ f2 IN (subforms (DISJ f1 f2))``,
rw[subforms_def,subforms_phi_phi]);

val subforms_NOT = store_thm(
"subforms_NOT",
``f IN (subforms (NOT f))``,
rw[subforms_def,subforms_phi_phi]);

val subforms_DIAM = store_thm(
"subforms_DIAM",
``f IN (subforms (DIAM f))``,
rw[subforms_def,subforms_phi_phi]);

val subforms_trans = store_thm(
"subforms_trans",
``!f. f IN subforms phi /\ phi IN subforms psi ==> f IN subforms psi``,
rw[] >> Induct_on `psi` >> rw[] >> fs[subforms_def] 
>> fs[subforms_def]);

val subforms_FINITE = store_thm(
"subforms_FINITE",
``FINITE (subforms phi)``,
Induct_on `phi` >> fs[subforms_def]);

val peval_satis_strengthen = store_thm(
"peval_satis_strengthen",
``!M w f. propform f /\ (‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s) /\ w IN M.frame.world ==> (satis M w f <=> peval ((Œªa. w IN M.valt a) INTER s) f)``,
Induct_on `f` >> rw[]
>- (`(VAR a) IN subforms (VAR a)` by fs[subforms_def] >>
   `a IN s` by fs[] >> metis_tac[satis_def])
>- (simp[satis_def] >> 
   `(‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s)`
          by (`‚àÄa. VAR a ‚àà subforms f ‚áí (VAR a) IN subforms (DISJ f f')` suffices_by metis_tac[] >>
	      `f IN (subforms (DISJ f f'))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >>
   `(‚àÄa. VAR a ‚àà subforms f' ‚áí a ‚àà s)`
          by (`‚àÄa. VAR a ‚àà subforms f' ‚áí (VAR a) IN subforms (DISJ f f')` suffices_by metis_tac[] >>
	      `f' IN (subforms (DISJ f f'))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >> metis_tac[])
>- metis_tac[satis_def]
>- (simp[satis_def] >>
   `(‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s)`
          by (`‚àÄa. VAR a ‚àà subforms f ‚áí (VAR a) IN subforms (¬¨f)` suffices_by metis_tac[] >>
	      `f IN (subforms (¬¨f))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >> metis_tac[]));


val equiv0_peval_strengthen = store_thm(
"equiv0_peval_strengthen",
``!f1 f2. propform f1 /\ propform f2 /\
(‚àÄa. VAR a ‚àà subforms f1 ‚áí a ‚àà s) /\
(‚àÄa. VAR a ‚àà subforms f2 ‚áí a ‚àà s) ==>
(!œÉ. œÉ IN (POW s) ==> peval œÉ f1 = peval œÉ f2) ==> (!M w. satis M w f1 <=> satis M w f2)``,
rw[] >> eq_tac >> rw[] >> `w IN M.frame.world` by metis_tac[satis_in_world]
>- (`peval ((Œªa. w IN M.valt a) INTER s) f2` suffices_by metis_tac[peval_satis_strengthen,satis_in_world] >>
   `peval ((Œªa. w IN M.valt a) INTER s) f1` by metis_tac[peval_satis_strengthen] >>
   `((Œªa. w IN M.valt a) INTER s) IN (POW s)` by fs[POW_DEF,INTER_DEF,SUBSET_DEF] >>
   metis_tac[])
>- (`peval ((Œªa. w IN M.valt a) INTER s) f1` suffices_by metis_tac[peval_satis_strengthen,satis_in_world] >>
   `peval ((Œªa. w IN M.valt a) INTER s) f2` by metis_tac[peval_satis_strengthen] >>
   `((Œªa. w IN M.valt a) INTER s) IN (POW s)` by fs[POW_DEF,INTER_DEF,SUBSET_DEF] >>
   metis_tac[]));



val peval_restriction = store_thm(
  "peval_restriction",
  ``!f. propform f ==> (‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s) ==> !œÉ. peval œÉ f = peval (œÉ INTER s) f``,
  Induct_on `f` 
  >- (rw[] >>
     `(VAR a) ‚àà subforms (VAR a)`  by fs[subforms_def] >>
     `a IN s` by fs[] >> fs[IN_DEF])
  >- (rw[] >>
     `(‚àÄa. VAR a ‚àà subforms f' ‚áí a ‚àà s)`
         by (`‚àÄa. VAR a ‚àà subforms f' ‚áí (VAR a) IN subforms (DISJ f f')` suffices_by metis_tac[] >>
	      `f' IN (subforms (DISJ f f'))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >>
     `(‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s)`
         by (`‚àÄa. VAR a ‚àà subforms f ‚áí (VAR a) IN subforms (DISJ f f')` suffices_by metis_tac[] >>
	      `f IN (subforms (DISJ f f'))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >>
     metis_tac[])
  >- fs[peval_def]
  >- (rw[] >>
   `(‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s)`
       by (`‚àÄa. VAR a ‚àà subforms f ‚áí (VAR a) IN subforms (¬¨f)` suffices_by metis_tac[] >>
	      `f IN (subforms (¬¨f))` by fs[subforms_def,subforms_phi_phi] >>
	      metis_tac[subforms_trans]) >> metis_tac[])
  >- fs[propform_def]);


val peval_satis = store_thm(
"peval_satis",
``!M w f. propform f /\ w IN M.frame.world ==> (satis M w f <=> peval (Œªa. w IN M.valt a) f)``,
Induct_on `f` >> rw[] 
>> metis_tac[satis_def]);

val peval_equiv0 = store_thm(
"peval_equiv0",
``!f1 f2. propform f1 /\ propform f2 /\ (!M w. satis M w f1 <=> satis M w f2) ==> (!œÉ. peval œÉ f1 = peval œÉ f2)``,
gen_tac >> gen_tac >> strip_tac >> SPOSE_NOT_THEN ASSUME_TAC >>
`?œÉ. (peval œÉ f1 /\ ¬¨(peval œÉ f2)) \/ (¬¨(peval œÉ f1) /\ peval œÉ f2)` by metis_tac[] 
>- (`?M w. satis M w f1 /\ ¬¨satis M w f2` suffices_by metis_tac[] >>
    `(univ(:'b)) <> {}` by metis_tac[UNIV_NOT_EMPTY] >>
    `?b. b IN univ(:'b)` by metis_tac[MEMBER_NOT_EMPTY] >>
   qexists_tac `<| frame := <| world := {b};
                           rel := Œªn1 n2. (n1 = b /\ n2 = b) |>;
                   valt := Œªa w. (œÉ a) |>` >>
   qabbrev_tac `M = <| frame := <| world := {b};
                           rel := Œªn1 n2. (n1 = b /\ n2 = b) |>;
                   valt := Œªa w. (œÉ a) |>` >>
   qexists_tac `b` >> rw[]
   >- (`satis M b f1` suffices_by metis_tac[] >>
      `b IN M.frame.world` by fs[Abbr`M`] >>
      `peval (Œªa. b ‚àà M.valt a) f1` suffices_by metis_tac[peval_satis] >>
      rw[IN_DEF,Abbr`M`] >> `(Œªa. œÉ a) = œÉ` by rw[FUN_EQ_THM] >> fs[])
   >- (`b IN M.frame.world` by fs[Abbr`M`] >>
      `¬¨(peval (Œªa. b ‚àà M.valt a) f2)` suffices_by metis_tac[peval_satis] >>
      rw[IN_DEF,Abbr`M`] >> `(Œªa. œÉ a) = œÉ` by rw[FUN_EQ_THM] >> fs[]))
>- (`?M w. ¬¨satis M w f1 /\ satis M w f2` suffices_by metis_tac[] >>
   qexists_tac `<| frame := <| world := {b};
                           rel := Œªn1 n2. (n1 = b /\ n2 = b) |>;
                   valt := Œªa w. (œÉ a) |>` >>
   qabbrev_tac `M = <| frame := <| world := {b};
                           rel := Œªn1 n2. (n1 = b /\ n2 = b) |>;
                   valt := Œªa w. (œÉ a) |>` >>
   qexists_tac `b` >> rw[]
   >- (`¬¨satis M b f1` suffices_by metis_tac[] >>
      `b IN M.frame.world` by fs[Abbr`M`] >>
      `¬¨peval (Œªa. b ‚àà M.valt a) f1` suffices_by metis_tac[peval_satis] >>
      rw[IN_DEF,Abbr`M`] >> `(Œªa. œÉ a) = œÉ` by rw[FUN_EQ_THM] >> fs[])
   >- (`b IN M.frame.world` by fs[Abbr`M`] >>
      `(peval (Œªa. b ‚àà M.valt a) f2)` suffices_by metis_tac[peval_satis] >>
      rw[IN_DEF,Abbr`M`] >> `(Œªa. œÉ a) = œÉ` by rw[FUN_EQ_THM] >> fs[])));

val partition_to_peval_well_defined = store_thm(
"partition_to_peval_well_defined",
``!f1 f2. (propform f1 /\ propform f2 /\ equiv0 Œº f1 f2) ==> ((Œªf s. peval s f) f1) = ((Œªf s. peval s f) f2)``,
rw[equiv0_def] >> simp[FUN_EQ_THM] >> metis_tac[peval_equiv0]);



val IMAGE_peval_singlton_strengthen = store_thm(
"IMAGE_peval_singlton_strengthen",
``!x form. x IN {f | propform f /\ ‚àÄa. (VAR a) IN (subforms f) ‚áí a ‚àà s}//e /\ form IN x ==>
IMAGE (Œªf. {œÉ | peval œÉ f} ‚à© POW s) x = {{œÉ | (peval œÉ form)} INTER (POW s)}``,
rw[partition_def] >> rw[IMAGE_DEF] >>
`!f. propform f /\ (equiv0 Œº x' f) ==> ((Œªs. peval s f) = (Œªs. peval s form))` by
(rw[] >> fs[] >> `equiv0 Œº f form` by metis_tac[equiv0_def] >> simp[FUN_EQ_THM] >> metis_tac[partition_to_peval_well_defined]) >>
simp[Once EXTENSION] >> rw[] >> eq_tac >> rw[]
>- fs[EXTENSION]
>- (qexists_tac `form` >> fs[EXTENSION]));

val INTER_EQ = store_thm(
  "INTER_EQ",
  ``!a b c. a ‚à© c = b ‚à© c ==>
  (!x. x IN c ==> (x IN a <=> x IN b))``,
  rw[EQ_IMP_THM]
  >- (`x IN (a ‚à© c)` by fs[INTER_DEF] >>
     `x IN (b ‚à© c)` by (fs[EXTENSION] >> metis_tac[]) >>
     `x IN b` by fs[INTER_DEF])
  >- (`x IN (b ‚à© c)` by fs[INTER_DEF] >>
     `x IN (a ‚à© c)` by (fs[EXTENSION] >> metis_tac[]) >>
     fs[INTER_DEF]));

val INJ_peval_partition_strengthen = store_thm(
  "INJ_peval_partition_strengthen",
  ``INJ
  (\eqc. ((IMAGE (Œªf. {s| peval s f} INTER (POW s)) eqc)))
  {f | propform f /\ ‚àÄa. (VAR a) IN (subforms f) ‚áí a ‚àà s}//e
  (POW (POW (POW s)))``, 
  rw[INJ_DEF] >> fs[partition_def] >> simp[EXTENSION] >> fs[]
  >- (rw[IMAGE_DEF] >> fs[POW_DEF,SUBSET_DEF] >> rw[] >> fs[INTER_DEF])
  >- (rw[EQ_IMP_THM] >>
      `equiv0 Œº x x'` suffices_by metis_tac[equiv0_SYM,equiv0_TRANS] >>
        `{y |
              (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß
              equiv0 Œº x y} IN
         {f | propform f /\ ‚àÄa. (VAR a) IN (subforms f) ‚áí a ‚àà s}//e`
            by (rw[partition_def] >> qexists_tac `x` >> rw[]) >>
	`x IN {y |
         (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß equiv0 Œº x y}` by fs[equiv0_REFL] >>
	`{y |
              (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß
              equiv0 Œº x' y} IN
         {f | propform f /\ ‚àÄa. (VAR a) IN (subforms f) ‚áí a ‚àà s}//e`
            by (rw[partition_def] >> qexists_tac `x'` >> rw[]) >>
	`x' IN {y |
         (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß equiv0 Œº x' y}` by fs[equiv0_REFL] >>
        `IMAGE (Œªf. {œÉ | peval œÉ f} ‚à© POW s) {y | (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß equiv0 Œº x y} =
     {{œÉ | peval œÉ x} ‚à© POW s}` by metis_tac[IMAGE_peval_singlton_strengthen] >>
        `IMAGE (Œªf. {œÉ | peval œÉ f} ‚à© POW s) {y | (propform y ‚àß ‚àÄa. VAR a ‚àà subforms y ‚áí a ‚àà s) ‚àß equiv0 Œº x' y} =
     {{œÉ | peval œÉ x'} ‚à© POW s}` by metis_tac[IMAGE_peval_singlton_strengthen] >> fs[] >>
        `!œÉ. œÉ IN (POW s) ==> (œÉ IN {s | peval s x} <=> œÉ IN {s | peval s x'})` by metis_tac[INTER_EQ] >> fs[] >> rw[equiv0_def] >>
	irule equiv0_peval_strengthen >- (qexists_tac `s` >> rw[])
	                             >> rw[] >> qexists_tac `s` >> rw[]));




val DEG_IBC_strengthen = store_thm(
  "DEG_IBC_strengthen",
  ``‚àÄx.
   DEG x ‚â§ n + 1 ‚àß (‚àÄa. (VAR a) IN subforms x ‚áí a ‚àà s) ‚áî
   IBC x
     ({VAR v | v ‚àà s} ‚à™
      {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. (VAR a) IN subforms psi ‚áí a ‚àà s})``,
Induct_on `x` >> rw[DEG_def]
>- (simp[SimpRHS,Once IBC_cases] >> rw[subforms_def])
>- (`IBC (DISJ x x')
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}) ==>
   IBC x 
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s})`
       by rw[Once IBC_cases] >>
   `(‚àÄa. VAR a ‚àà subforms (DISJ x x') ‚áí a ‚àà s) ==>
   (‚àÄa. VAR a ‚àà subforms x ‚áí a ‚àà s)` by rw[subforms_def] >>
   `IBC (DISJ x x')
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}) ==>
   IBC x' 
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s})`
       by rw[Once IBC_cases] >>
   `(‚àÄa. VAR a ‚àà subforms (DISJ x x') ‚áí a ‚àà s) ==>
   (‚àÄa. VAR a ‚àà subforms x' ‚áí a ‚àà s)` by rw[subforms_def] >>
   rw[EQ_IMP_THM]
   >- metis_tac[IBC_cases]
   >- metis_tac[IBC_cases]
   >- metis_tac[IBC_cases]
   >- (`(‚àÄa. VAR a ‚àà subforms x' ‚áí a ‚àà s)` by metis_tac[] >>
      `(‚àÄa. VAR a ‚àà subforms x ‚áí a ‚àà s)` by metis_tac[] >>
      fs[subforms_def]))
>- fs[subforms_def,Once IBC_cases]
>- (`IBC (¬¨x)
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}) ==>
   IBC x 
  ({VAR v | v ‚àà s} ‚à™
   {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s})`
       by rw[Once IBC_cases] >>
   `(‚àÄa. VAR a ‚àà subforms (¬¨x) ‚áí a ‚àà s) ==>
   (‚àÄa. VAR a ‚àà subforms x ‚áí a ‚àà s)` by rw[subforms_def] >>
   rw[EQ_IMP_THM]
   >- metis_tac[IBC_cases]
   >- metis_tac[IBC_cases]
   >- fs[subforms_def])
>- fs[Once IBC_cases,subforms_def]);


val IBC_EMPTY_lemma = prove(
  ``‚àÄf s. IBC f s ==> s = {} ==> equiv0 Œº f TRUE \/ equiv0 Œº f FALSE``,
  Induct_on `IBC` >> rw[] >> fs[equiv0_def,satis_def,TRUE_def]);


(*

val equiv0_equiv0_on_form = store_thm(
"equiv0_equiv0_on_form",
``!s. equiv0 equiv0_on s``,
rw[equiv0_on_def] >> 
metis_tac[equiv0_def]);


*)

val FINITE_DNF = store_thm(
    "FINITE_DNF",
    ``!fs. FINITE fs ==> FINITE {f | DNF_OF f fs}``,
    rw[DNF_OF_def,DISJ_OF_def] >>
    `FINITE {c | CONJ_OF c fs}` by metis_tac[FINITE_CONJ_OF] >>
    `FINITE  {f | DISJ_OF0 f {c | CONJ_OF c fs}}` by metis_tac[FINITE_DISJ_OF0] >>
    `FINITE (FALSE INSERT {f | DISJ_OF0 f {c | CONJ_OF c fs}})` by metis_tac[FINITE_INSERT] >>
    `{f | f = ‚ä• ‚à® DISJ_OF0 f {c | CONJ_OF c fs}} = (FALSE INSERT {f | DISJ_OF0 f {c | CONJ_OF c fs}})` by
    simp[EXTENSION,INSERT_DEF] >> fs[]);
    

val IBC_FINITE = store_thm(
  "IBC_FINITE",
  ``!fs. FINITE fs ==> FINITE (partition (equiv0 Œº) {f | IBC f fs})``,
  rw[] >> Cases_on `fs = {}`
  >- (fs[partition_def] >>
     `{t | ‚àÉx. IBC x ‚àÖ ‚àß t = {y | IBC y ‚àÖ ‚àß equiv0 Œº x y}} = {{y | IBC y ‚àÖ ‚àß equiv0 Œº TRUE y};{y | IBC y ‚àÖ ‚àß equiv0 Œº FALSE y}}` by (fs[EXTENSION] >> rw[] >> eq_tac >> rw[]
     >- (`equiv0 Œº x' TRUE \/ equiv0 Œº x' FALSE` by metis_tac[IBC_EMPTY_lemma]
        >> fs[equiv0_def,satis_def,TRUE_def])
     >- (qexists_tac `TRUE` >> rw[] >> rw[Once IBC_cases,TRUE_def] >> metis_tac[IBC_cases])
     >- (qexists_tac `FALSE` >> rw[] >> rw[Once IBC_cases,TRUE_def])) >>
     fs[]) >>
  qabbrev_tac `ff = \s.{d | DNF_OF d fs /\ (!f. f IN s ==> equiv0 Œº d f)}` >>
  `FINITE {f | DNF_OF f fs}` by metis_tac[FINITE_DNF] >>
  `INJ ff ({f | IBC f fs}//e) (POW {f | DNF_OF f fs})` suffices_by metis_tac[FINITE_POW,FINITE_INJ] >> 
  simp[INJ_DEF,IN_POW] >> rw[]
  >- simp[Abbr`ff`,SUBSET_DEF] >>
  SPOSE_NOT_THEN ASSUME_TAC >>
  `DISJOINT x y` by metis_tac[partition_elements_disjoint,equiv0_equiv_on]>>
  `(‚àÄf1 f2. f1 ‚àà x /\ f2 ‚àà x ==> equiv0 Œº f1 f2) /\
   (‚àÄf1 f2. f1 ‚àà y /\ f2 ‚àà y ==> equiv0 Œº f1 f2)`
     by metis_tac [partition_elements_interrelate,equiv0_equiv_on] >>
  fs[Abbr`ff`] >>
  `(equiv0 Œº) equiv_on {f | IBC f fs}` by metis_tac[equiv0_equiv_on] >>
  `‚àÄf1 f2. f1 ‚àà x /\ f2 ‚àà y ==> ¬¨equiv0 Œº f1 f2` by metis_tac[equiv_on_parition_NOT_R] >>
  qpat_x_assum `GSPEC _ = GSPEC _` mp_tac >> simp[EXTENSION] >>
  `x <> {}` by metis_tac[EMPTY_NOT_IN_partition,equiv0_equiv_on] >>
  `?fx. fx IN x` by metis_tac[MEMBER_NOT_EMPTY] >>
  `x ‚äÜ {f | IBC f fs}` by metis_tac[partition_SUBSET] >>
  `IBC fx fs` by (fs[SUBSET_DEF] >> metis_tac[]) >>
  `‚àÉd. DNF_OF d fs /\ equiv0 Œº fx d` by metis_tac[IBC_DNF_EXISTS] >>
  qexists_tac`d` >> simp[] >>
  `‚àÄf. f ‚àà x ==> equiv0 Œº d f` by metis_tac[equiv0_SYM, equiv0_TRANS] >> simp[]>>
  `y <> {}` by metis_tac[EMPTY_NOT_IN_partition,equiv0_equiv_on] >>
  `‚àÉfy. fy ‚àà y` by metis_tac[MEMBER_NOT_EMPTY] >>
  qexists_tac `fy` >> simp[] >> metis_tac[equiv0_SYM, equiv0_TRANS]);


val IBC_partition_equiv0 = store_thm(
  "IBC_partition_equiv0", 
  ``!f fs. IBC f fs ==> fs <> {} ==>
         ?p. IBC p (IMAGE CHOICE (partition (equiv0 Œº) fs)) /\ equiv0 Œº f p``,
Induct_on `IBC` >> rw[]
>- (`‚àÉp. IBC p (IMAGE CHOICE fs//e) ‚àß equiv0 Œº f p /\
   ‚àÉp'. IBC p' (IMAGE CHOICE fs//e) ‚àß equiv0 Œº f' p'` by metis_tac[] >>
   qexists_tac `DISJ p p'` >> rw[]
   >- metis_tac[IBC_cases]
   >- fs[equiv0_def,satis_def])
>- (qexists_tac `FALSE` >> rw[Once IBC_cases])
>- (`‚àÉp. IBC p (IMAGE CHOICE fs//e) ‚àß equiv0 Œº f p` by metis_tac[] >>
   qexists_tac `¬¨p` >> rw[Once IBC_cases] >> fs[equiv0_def,satis_def])
>- (fs[partition_def] >>
   qexists_tac `CHOICE {y | y IN fs /\ equiv0 Œº f y}` >> rw[]
   >- (`(CHOICE {y | y ‚àà fs ‚àß equiv0 Œº f y}) IN (IMAGE CHOICE {t | ‚àÉx. x ‚àà fs ‚àß t = {y | y ‚àà fs ‚àß equiv0 Œº x y}})` by (fs[IMAGE_DEF,PULL_EXISTS] >> qexists_tac `f` >> rw[]) >> metis_tac[IBC_cases]) >>
   `{y | y ‚àà fs ‚àß equiv0 Œº f y} <> {}` by (`f IN {y | y ‚àà fs ‚àß equiv0 Œº f y}` by fs[] >> metis_tac[MEMBER_NOT_EMPTY]) >>
   `(CHOICE {y | y ‚àà fs ‚àß equiv0 Œº f y}) IN {y | y ‚àà fs ‚àß equiv0 Œº f y}` by metis_tac[CHOICE_DEF] >> fs[]));

val IBC_SUBSET = store_thm(
    "IBC_SUBSET",
    ``!f fs. IBC f fs ==> !gs. fs SUBSET gs ==> IBC f gs``,
    Induct_on `IBC` >> rw[]
    >> metis_tac[SUBSET_DEF,IBC_cases]);

      
val FINITE_FINITE_IBC = store_thm(
  "FINITE_FINITE_IBC",
  ``!fs. fs <> {} ==> FINITE (partition (equiv0 Œº) fs) ==> FINITE (partition (equiv0 Œº) {f | IBC f fs})``,
  rw[] >>
  `FINITE (IMAGE CHOICE fs//e)` by metis_tac[IMAGE_FINITE] >>
  `FINITE {f | IBC f (IMAGE CHOICE fs//e)}//e` by metis_tac[IBC_FINITE] >>
  `fs//e <> {}` by metis_tac[partition_eq_EMPTY] >>
  `?ff. SURJ ff ({f | IBC f (IMAGE CHOICE fs//e)}//e) ({f | IBC f fs}//e)` by
  (fs[partition_def] >> 
  qabbrev_tac `ff = \s. {y | IBC y fs /\ !f. f IN s ==> equiv0 Œº y f}` >> rw[SURJ_DEF] >>
  qexists_tac `ff` >> rw[]
  >- (fs[partition_def,Abbr`ff`] >> qexists_tac `x'` >> rw[]
     >- (`(IMAGE CHOICE {t | ‚àÉx. x ‚àà fs ‚àß t = {y | y ‚àà fs ‚àß equiv0 Œº x y}}) SUBSET fs` by
        (rw[IMAGE_DEF,SUBSET_DEF] >>
	`{y | y ‚àà fs ‚àß equiv0 Œº x''' y} <> {}` by (`x''' IN {y | y ‚àà fs ‚àß equiv0 Œº x''' y}` by fs[] >> metis_tac[MEMBER_NOT_EMPTY]) >>
	`CHOICE {y | y ‚àà fs ‚àß equiv0 Œº x''' y} IN {y | y ‚àà fs ‚àß equiv0 Œº x''' y}` by metis_tac[CHOICE_DEF] >>
	fs[]) >>
	metis_tac[IBC_SUBSET])
     >- (rw[EXTENSION,EQ_IMP_THM]
        >- (`{t | ‚àÉx. x ‚àà fs ‚àß t = {y | y ‚àà fs ‚àß equiv0 Œº x y}} SUBSET
	    {t |
               ‚àÉx.
                  x ‚àà fs ‚àß
                  ‚àÄx''.
                     (x'' ‚àà t ‚áí x'' ‚àà fs ‚àß equiv0 Œº x x'') ‚àß
                     (x'' ‚àà fs ‚àß equiv0 Œº x x'' ‚áí x'' ‚àà t)}` by (rw[SUBSET_DEF] >> qexists_tac `x'''` >> rw[]) >>
	   qabbrev_tac `A = {t | ‚àÉx. x ‚àà fs ‚àß t = {y | y ‚àà fs ‚àß equiv0 Œº x y}}` >>
	   qabbrev_tac `B = {t |
                                 ‚àÉx.
                                    x ‚àà fs ‚àß
                                            ‚àÄx''.
                                            (x'' ‚àà t ‚áí x'' ‚àà fs ‚àß equiv0 Œº x x'') ‚àß
                                            (x'' ‚àà fs ‚àß equiv0 Œº x x'' ‚áí x'' ‚àà t)}` >>
	   `(IMAGE CHOICE A) SUBSET (IMAGE CHOICE B)` by metis_tac[IMAGE_SUBSET] >>
	   `IBC x' (IMAGE CHOICE B)` by metis_tac[IBC_SUBSET] >>
	   metis_tac[equiv0_REFL,equiv0_SYM,equiv0_TRANS])
	>> metis_tac[equiv0_SYM,equiv0_TRANS]))
  >- (fs[partition_def] >>
     qabbrev_tac `A = {t | ‚àÉx. x ‚àà fs ‚àß t = {y | y ‚àà fs ‚àß equiv0 Œº x y}}` >>
     simp[PULL_EXISTS] >> drule IBC_partition_equiv0 >> rw[] >> qexists_tac `p` >> rw[]
     >- fs[partition_def,Abbr`A`]
     >- (rw[Abbr`ff`,EXTENSION,EQ_IMP_THM]
        >- (fs[partition_def,Abbr`A`] >> `equiv0 Œº x p` by fs[] >> metis_tac[equiv0_SYM,equiv0_TRANS])
	>- metis_tac[equiv0_SYM,equiv0_TRANS]))) >>
  metis_tac[FINITE_SURJ]);

val NOT_equiv0_VAR_DIAM = store_thm(
    "NOT_equiv0_VAR_DIAM",
    ``!a f. ¬¨(equiv0 Œº (VAR a) (DIAM f))``,
    rw[equiv0_def] >>
    `?M w. satis M w (VAR a) /\ ¬¨(satis M w (‚óá f))` suffices_by metis_tac[] >>
    `univ(:'b) <> {}` by metis_tac[UNIV_NOT_EMPTY] >>
    `?b. b IN (univ(:'b))` by metis_tac[MEMBER_NOT_EMPTY] >>
    qexists_tac `<| frame := <| world := {b};
                           rel := Œªn1 n2. F |>;
                   valt := Œªe w. T|>` >> qexists_tac `b` >> rw[]
    >> rw[satis_def]);




val equiv0_add_predecessor = store_thm(
  "equiv0_add_predecessor",
  ``!M w f b. b NOTIN M.frame.world /\ w IN M.frame.world ==>
            (satis M w f <=>
            satis <| frame := <| world := b INSERT M.frame.world;
                           rel := Œªn1 n2. ((n1 <> b /\ n2 <> b) /\ n1 IN M.frame.world /\ n2 IN M.frame.world /\
			   M.frame.rel n1 n2) \/ (n1 = b /\ n2 = w) |>;
                   valt := Œªa b. (M.valt a b) |> w f)``,
  rw[] >> qmatch_abbrev_tac `satis M w f ‚áî satis M' w f` >>
  `bounded_mor (\a. a) M M'` by (rw[bounded_mor_def] 
  >- fs[Abbr`M'`]
  >- (fs[Abbr`M'`] >>rw[satis_def] >> fs[IN_DEF])
  >- (fs[Abbr`M'`] >> metis_tac[])
  >- fs[Abbr`M'`]
  >- (fs[Abbr`M'`] >> metis_tac[]))
  >> `satis M w f <=> satis M' ((\a. a) w) f` by fs[prop_2_14] >> fs[]);



val equiv0_add_predecessor = store_thm(
  "equiv0_add_predecessor",
  ``!M w f b. b NOTIN M.frame.world /\ w IN M.frame.world ==>
            (satis M w f <=>
            satis <| frame := <| world := b INSERT M.frame.world;
                           rel := Œªn1 n2. ((n1 <> b /\ n2 <> b) /\ n1 IN M.frame.world /\ n2 IN M.frame.world /\
			   M.frame.rel n1 n2) \/ (n1 = b /\ n2 = w) |>;
                   valt := Œªa b. (M.valt a b) |> w f)``,
  rw[] >> qmatch_abbrev_tac `satis M w f ‚áî satis M' w f` >>
  `bounded_mor (\a. a) M M'` by (rw[bounded_mor_def] 
  >- fs[Abbr`M'`]
  >- (fs[Abbr`M'`] >>rw[satis_def] >> fs[IN_DEF])
  >- (fs[Abbr`M'`] >> metis_tac[])
  >- fs[Abbr`M'`]
  >- (fs[Abbr`M'`] >> metis_tac[]))
  >> `satis M w f <=> satis M' ((\a. a) w) f` by fs[prop_2_14] >> fs[]);


val equiv0_DIAM_lemma = store_thm(
  "equiv0_DIAM_lemma",
  ``!f g. ¬¨(equiv0 Œº f g) ==> ¬¨(equiv0 Œº (DIAM f) (DIAM g))``,
  rw[EQ_equiv0_def] >>
  `(satis M w f /\ ¬¨satis M w g) \/ (¬¨satis M w f /\ satis M w g)` by metis_tac[] >>
  Cases_on `?b. 
  >- (qexists_tac `<| frame := <| world := M.frame.world};
                           rel := Œªn1 n2. ((n1 >= 1 /\ n2 >= 1) /\ (n1 - 1) IN M.frame.world /\ (n2 - 1) IN M.frame.world /\
			   M.frame.rel (n1 - 1) (n2 - 1)) \/ (n1 = 0 /\ n2 = w + 1) |>;
                   valt := Œªa b. (M.valt a (b - 1)) |>` >>
    qmatch_abbrev_tac `?w'. w' IN M'.frame.world /\ (satis M' w' (DIAM f) ‚áé satis M' w' (DIAM g))` >> qexists_tac `0` >> rw[]
    >- fs[Abbr`M'`]
    >- (`satis M' 0 (DIAM f) /\ ¬¨satis M' 0 (DIAM g)` suffices_by metis_tac[] >> rw[satis_def]
       >- fs[Abbr`M'`]
       >- (qexists_tac `w + 1` >> fs[Abbr`M'`] >> metis_tac[equiv0_add_predecessor])
       >- (`!v. M'.frame.rel 0 v /\ v IN M'.frame.world ==> ¬¨satis M' v g` suffices_by metis_tac[] >> rw[] >>
          fs[Abbr`M'`] (* 2 *) >- fs[] >- metis_tac[equiv0_add_predecessor])))
  >> (qexists_tac `<| frame := <| world := 0 INSERT {n + 1 | n IN M.frame.world};
                           rel := Œªn1 n2. ((n1 >= 1 /\ n2 >= 1) /\ (n1 - 1) IN M.frame.world /\ (n2 - 1) IN M.frame.world /\
			   M.frame.rel (n1 - 1) (n2 - 1)) \/ (n1 = 0 /\ n2 = w + 1) |>;
                   valt := Œªa b. (M.valt a (b - 1)) |>` >>
    qmatch_abbrev_tac `?w'. w' IN M'.frame.world /\ (satis M' w' (DIAM f) ‚áé satis M' w' (DIAM g))` >> qexists_tac `0` >> rw[]
    >- fs[Abbr`M'`]
    >- (`¬¨satis M' 0 (DIAM f) /\ satis M' 0 (DIAM g)` suffices_by metis_tac[] >> rw[satis_def]
       >- (`!v. M'.frame.rel 0 v /\ v IN M'.frame.world ==> ¬¨satis M' v f` suffices_by metis_tac[] >> rw[] >>
          fs[Abbr`M'`] (* 2 *) >- fs[] >- metis_tac[equiv0_add_predecessor])
       >- fs[Abbr`M'`]
       >- (qexists_tac `w + 1` >> fs[Abbr`M'`] >> metis_tac[equiv0_add_predecessor]))));
  
       
val equiv0_DIAM = store_thm(
    "equiv0_DIAM",
    ``!f g. equiv0 (DIAM f) (DIAM g) <=> equiv0 f g``,
    rw[EQ_IMP_THM]
    >- (SPOSE_NOT_THEN ASSUME_TAC >> metis_tac[equiv0_DIAM_lemma])
    >- fs[equiv0_def,satis_def]);


val prop_2_29_strengthen = store_thm(
  "prop_2_29_strengthen",
  ``!s. FINITE s ==> !n. FINITE (partition equiv0 {f| DEG f <= n /\
                                                   (!a. (VAR a) IN (subforms f) ==> a IN s)})``,gen_tac >> strip_tac >>
Induct_on `n` 
>- (`{f | DEG f ‚â§ 0 ‚àß ‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s} =
   {f | propform f ‚àß ‚àÄa. VAR a ‚àà subforms f ‚áí a ‚àà s}` by (simp[EXTENSION] >> metis_tac[DEG_0_propform]) >> fs[] >>
   `FINITE (POW (POW (POW s)))` by metis_tac[FINITE_POW] >>
   metis_tac[INJ_peval_partition_strengthen,FINITE_INJ])
>> (* step case *)
   `SUC n = n + 1` by fs[] >> rw[] >>
   `{f | DEG f ‚â§ n + 1 ‚àß ‚àÄa. (VAR a) IN subforms f ‚áí a ‚àà s} = {phi | IBC phi ({VAR v | v IN s} UNION {DIAM psi | DEG psi <= n /\ ‚àÄa. (VAR a) IN subforms psi ‚áí a ‚àà s})}`
       by (fs[EXTENSION] >> rw[EQ_IMP_THM] (* 3 *)
           >> metis_tac[DEG_IBC_strengthen]) >> simp[] >>
   Cases_on `{VAR v | v ‚àà s} ‚à™
      {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s} = {}`
   (* empty case *)
   >- (fs[] >> fs[partition_def] >>
      `{t | ‚àÉx. IBC x ‚àÖ ‚àß t = {y | IBC y ‚àÖ ‚àß equiv0 x y}} = {{f | IBC f {} /\ equiv0 f TRUE};{f | IBC f {} /\ equiv0 f FALSE}}` by
      (simp[Once EXTENSION] >> rw[] >> eq_tac >> rw[] (* 3 *)
      >- (drule IBC_EMPTY_lemma >> rw[]
         >- (`{y | IBC y ‚àÖ ‚àß equiv0 x' y} = {f | IBC f ‚àÖ ‚àß equiv0 f TRUE}` suffices_by metis_tac[] >>
	    rw[EXTENSION,EQ_IMP_THM] >> metis_tac[equiv0_SYM,equiv0_TRANS])
         >- (`{y | IBC y ‚àÖ ‚àß equiv0 x' y} = {f | IBC f ‚àÖ ‚àß equiv0 f FALSE}` suffices_by metis_tac[] >>
	    rw[EXTENSION,EQ_IMP_THM] >> metis_tac[equiv0_SYM,equiv0_TRANS]))
      >- (qexists_tac `TRUE` >> rw[]
         >- (rw[Once IBC_cases] >>
	    `‚àÉf. TRUE = ¬¨f ‚àß IBC f ‚àÖ` suffices_by metis_tac[] >> qexists_tac `FALSE` >> metis_tac[IBC_cases,TRUE_def])
	 >- (rw[EXTENSION,EQ_IMP_THM] >> metis_tac[equiv0_SYM]))
      >- (qexists_tac `FALSE` >> rw[]
         >- rw[Once IBC_cases] 
	 >- (rw[EXTENSION,EQ_IMP_THM] >> metis_tac[equiv0_SYM]))) >> fs[])
   (* nonempty case *)
   >- (irule FINITE_FINITE_IBC (* 2 *)
      >- (`({VAR v | v ‚àà s} ‚à™ {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s})//e =
          {VAR v | v ‚àà s}//e ‚à™ {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}//e`
	     by (irule equiv_on_disjoint_parition
	        >- (rw[] >> metis_tac[NOT_equiv0_VAR_DIAM])
                >- metis_tac[equiv0_equiv_on]
	        >- metis_tac[equiv0_equiv_on])
	        >> rw[] (* 2 *)
          >-  (`FINITE {VAR v | v IN s}` suffices_by metis_tac[FINITE_partition] >>
	       `SURJ VAR s {VAR v | v IN s}` suffices_by metis_tac[FINITE_SURJ] >> rw[SURJ_DEF])
	  >- (qabbrev_tac `A = {psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}//e` >> 
	       qabbrev_tac `B = {‚óá psi | DEG psi ‚â§ n ‚àß ‚àÄa. VAR a ‚àà subforms psi ‚áí a ‚àà s}//e` >>
	       `?ff. SURJ ff A B` suffices_by metis_tac[FINITE_SURJ] >>
	       qexists_tac `\s. {DIAM t | t IN s}` >> rw[SURJ_DEF] (* 2 *)
               >- (fs[Abbr`B`] >> rw[Once EXTENSION,partition_def] >> fs[PULL_EXISTS] >> fs[Abbr`A`,partition_def] >>
	          qexists_tac `x` >> rw[] >> eq_tac >> rw[] (* 4 *) >> metis_tac[equiv0_DIAM])
	       >- (fs[Abbr`A`,Abbr`B`] (* 2 *)
	          >> (fs[partition_def] >> fs[PULL_EXISTS] >>
		     qexists_tac `psi` >> fs[] >> rw[EXTENSION] >> eq_tac >> rw[] (* 2 *) >> metis_tac[equiv0_DIAM]))))
       >- rw[]));
	  

val prop_2_29 = store_thm(
"prop_2_29",
``FINITE univ (:'a) ==> !n. FINITE (partition equiv0 {f:'a form | DEG f <= n})``,
rw[] >> drule prop_2_29_strengthen >> rw[]);



(* n-bisimulation *)


val nbisim_def = Define`
nbisim M M' f n w w' <=>
w IN M.frame.world /\
w' IN M'.frame.world /\
(!m a b. a IN M.frame.world /\ b IN M'.frame.world ==> (m + 1 <= n ==> (f (m + 1)) a b ==> (f m) a b)) /\
((f n) w w') /\
(!v v'. v IN M.frame.world /\ v' IN M'.frame.world ==> ((f 0) v v' ==> !p. satis M v (VAR p) <=> satis M' v' (VAR p))) /\
(!v v' u i. (i + 1 <= n /\ v IN M.frame.world /\ v' IN M'.frame.world /\ u IN M.frame.world /\ M.frame.rel v u /\ (f (i + 1)) v v') ==>
(?u'. u' IN M'.frame.world /\ M'.frame.rel v' u' /\ (f i) u u')) /\
(!v v' u' i. (i + 1 <= n /\ v IN M.frame.world /\ v' IN M'.frame.world /\ u' IN M'.frame.world /\ M'.frame.rel v' u' /\ (f (i + 1)) v v') ==>
(?u. u IN M.frame.world /\ M.frame.rel v u /\ (f i) u u'))`;


val suc_bisim = store_thm(
"suc_bisim",
``!M M' f n w w'. nbisim M M' f (n + 1) w w' ==> nbisim M M' f n w w'``,
rpt strip_tac >>
`w IN M.frame.world` by metis_tac[nbisim_def] >>
`w' IN M'.frame.world` by metis_tac[nbisim_def] >>
`f (n + 1) w w'` by metis_tac[nbisim_def] >>
rw[nbisim_def]
>- (`m + 1 <= n + 1` by simp[] >> metis_tac[nbisim_def])
>- (`n + 1 <= n + 1` by simp[] >> metis_tac[nbisim_def])
>- metis_tac[nbisim_def]
>- (`i + 1 <= n + 1` by simp[] >> fs[nbisim_def] >> metis_tac[])
>- (`i + 1 <= n + 1` by simp[] >> fs[nbisim_def] >> metis_tac[nbisim_def]));

val suc_nbisim_rel = store_thm(
"suc_nbisim_rel",
``!M M' f n w w' v. nbisim M M' f (n + 1) w w' /\ M.frame.rel w v /\ v IN M.frame.world /\ w IN M.frame.world ==>
(?v'. v' IN M'.frame.world /\ M'.frame.rel w' v' /\ nbisim M M' f n v v')``,
rpt strip_tac >> `n + 1 <= n + 1` by simp[] >>
`(f (n + 1)) w w'` by metis_tac[nbisim_def] >>
`w IN M.frame.world` by metis_tac[nbisim_def] >>
`w' IN M'.frame.world` by metis_tac[nbisim_def] >>
fs[nbisim_def] >> `n <= n` by simp[] >>
`‚àÉu'. u' ‚àà M'.frame.world ‚àß M'.frame.rel w' u' ‚àß f n v u'` by metis_tac[] >> qexists_tac`u'` >> rw[]
>> `i <= n` by simp[] >> metis_tac[]);

val suc_nbisim_rel_SYM = store_thm(
"suc_nbisim_rel_SYM",
``!M M' f n w w' v'. nbisim M M' f (n + 1) w w' /\ M'.frame.rel w' v' /\ v' IN M'.frame.world /\ w' IN M'.frame.world ==>
(?v. v IN M.frame.world /\ M.frame.rel w v /\ nbisim M M' f n v v')``,
rpt strip_tac >> `n + 1 <= n + 1` by simp[] >>
`(f (n + 1)) w w'` by metis_tac[nbisim_def] >>
`w IN M.frame.world` by metis_tac[nbisim_def] >>
fs[nbisim_def] >> `n <= n` by simp[] >>
`‚àÉu. u ‚àà M.frame.world ‚àß M.frame.rel w u ‚àß f n u v'` by metis_tac[] >>
qexists_tac`u` >> rw[]
>> `i <= n` by simp[] >> metis_tac[]);


val DIAM_DEG_NOT_ZERO = store_thm(
"DIAM_DEG_NOT_ZERO",
``!phi. DEG (DIAM phi) <> 0``,
rpt strip_tac >> fs[DEG_def]);

val nbisim_rel_trans = store_thm(
"nbisim_rel_trans",
``!M M' f n w w'. nbisim M M' f n w w' ==> (f 0) w w'``,
rpt strip_tac >> Induct_on `n` >> rpt strip_tac
>- metis_tac[nbisim_def]
>- (`SUC n = n + 1` by simp[] >>
   `nbisim M M' f n w w'` by metis_tac[suc_bisim] >>
   metis_tac[]));


val prop_2_31_half1 = store_thm(
"prop_2_31_half1",
``!M M' n w w'. (?f. nbisim M M' f n w w') ==> (!(phi: 'a form). DEG phi <= n ==> (satis M w phi <=> satis M' w' phi))``,
gen_tac >> gen_tac >> gen_tac >> Induct_on `n`
>- (rpt strip_tac >>
    `DEG phi = 0` by simp[] >>
    `w IN M.frame.world /\ w' IN M'.frame.world` by metis_tac[nbisim_def] >>
    Induct_on `phi` >> rpt strip_tac 
    >- (`(f 0) w w'` by metis_tac[nbisim_def] >> fs[nbisim_def])
    >- (fs[DEG_def] >> metis_tac[satis_def])
    >- metis_tac[satis_def]
    >- (fs[DEG_def] >> metis_tac[satis_def])
    >- metis_tac[DIAM_DEG_NOT_ZERO])
>- (rw[] >>
    Induct_on `phi` >> simp[DEG_def]
    >- (gen_tac >> first_x_assum irule >> rw[DEG_def] >> metis_tac[suc_bisim,ADD1])
    >- rw[satis_def]
    >- rw[satis_def]
    >- (rw[satis_def] >> metis_tac[nbisim_def]) 
    >- (simp[ADD1, satis_def] >> rw[EQ_IMP_THM] 
      >- metis_tac[nbisim_def]
      >- (`M.frame.rel w v` by fs[IN_DEF] >>
        fs[ADD1] >>
        `?v'. M'.frame.rel w' v' /\ nbisim M M' f n v v' /\ v' ‚àà M'.frame.world`
           by metis_tac[ADD1,suc_nbisim_rel] >>
        metis_tac[IN_DEF])
      >- metis_tac[nbisim_def]
      >- (fs[ADD1] >>
       `‚àÉp. p ‚àà M.frame.world ‚àß M.frame.rel w p ‚àß nbisim M M' f n p v` by metis_tac[suc_nbisim_rel_SYM] >>
       metis_tac[]))));




val BIGCONJ_EXISTS_DEG = store_thm(
  "BIGCONJ_EXISTS_DEG",
  ``‚àÄs.
     FINITE s ‚áí
     (!f. f IN s ==> DEG f <= n) ==>
     ?ff. DEG ff <= n /\
     ‚àÄw M.
        w ‚àà M.frame.world ‚áí (satis M w ff ‚áî ‚àÄf. f ‚àà s ‚áí satis M w f)``,
  Induct_on `FINITE` >> rw[]
  >- (qexists_tac `TRUE` >> rw[TRUE_def,satis_def,DEG_def])
  >- (`‚àÄf. f ‚àà s ‚áí DEG f ‚â§ n` by metis_tac[] >>
     first_x_assum drule >> rw[] >>
     qexists_tac `AND e ff` >> rw[DEG_def,satis_def,AND_def] >> eq_tac >> rw[]
     >- rw[]
     >> metis_tac[]));


